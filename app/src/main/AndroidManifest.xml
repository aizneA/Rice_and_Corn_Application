<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.riceandcornapplication">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/rac_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/rac_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.RiceAndCornApplication"
        tools:targetApi="31">

        //prevention of disease
        <activity
            android:name=".PreventionActivity"
            android:exported="true"
            android:label="   RaC"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".CreditsActivity"
            android:exported="false"
            android:label="Credits"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".NavigateActivity"
            android:exported="false"
            android:label="Application Tutorial"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".NutrientDeficiency"
            android:exported="false"
            android:label="   RaC"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".InformationActivity"
            android:exported="true"
            android:label="   RaC">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".DetailedDiseaseInformation"
            android:exported="true"
            android:label="   RaC"
            android:parentActivityName=".CropDiseaseInformationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CropDiseaseInformationActivity" />
        </activity>
        <activity
            android:name=".CropDiseaseInformationActivity"
            android:exported="true"
            android:label="Crop Diseases"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".splashScreen"
            android:exported="true"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="   RaC" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>